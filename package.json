{
  "name": "article-summarizer",
  "version": "1.0.0",
  "description": "CLI tool for summarizing web articles using Google's Gemini AI",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "summarizer": "./dist/index.js"
  },
  "files": [
    "dist",
    "config"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "postinstall": "node -e \"try { require('fs').mkdirSync('./config', { recursive: true }); } catch (e) {}\"",
    "release": "npm version patch && npm publish"
  },
  "keywords": [
    "summarizer",
    "ai",
    "gemini",
    "cli",
    "article",
    "web",
    "markdown",
    "summary",
    "content-extraction"
  ],
  "author": "Your Name <your.email@example.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/article-summarizer.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/article-summarizer/issues"
  },
  "homepage": "https://github.com/yourusername/article-summarizer#readme",
  "license": "MIT",
  "dependencies": {
    "@google/genai": "^1.9.0",
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "commander": "^14.0.0",
    "dotenv": "^17.2.0",
    "node-cache": "^5.1.2",
    "turndown": "^7.1.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.13",
    "@types/turndown": "^5.0.4",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint": "^9.30.1",
    "jest": "^30.0.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}

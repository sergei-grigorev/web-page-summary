{
  "name": "article-summarizer",
  "version": "1.0.0",
  "description": "CLI tool for summarizing web articles using Google's Gemini AI",
  "main": "src/index.js",
  "type": "module",
  "bin": {
    "summarizer": "./src/index.js"
  },
  "files": [
    "src",
    "config"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "node src/index.js",
    "test": "node --test tests/**/*.test.js",
    "lint": "eslint . --ext .js",
    "prepublishOnly": "npm test && npm run lint",
    "postinstall": "node -e \"try { require('fs').mkdirSync('./config', { recursive: true }); } catch (e) {}\"",
    "release": "npm version patch && npm publish"
  },
  "keywords": [
    "summarizer",
    "ai",
    "gemini",
    "cli",
    "article",
    "web",
    "markdown",
    "summary",
    "content-extraction"
  ],
  "author": "Your Name <your.email@example.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/article-summarizer.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/article-summarizer/issues"
  },
  "homepage": "https://github.com/yourusername/article-summarizer#readme",
  "license": "MIT",
  "dependencies": {
    "@google/genai": "^1.9.0",
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "commander": "^14.0.0",
    "dotenv": "^17.2.0",
    "node-cache": "^5.1.2",
    "turndown": "^7.1.2"
  },
  "devDependencies": {
    "eslint": "^9.30.1",
    "@eslint/js": "^9.30.1"
  }
}
